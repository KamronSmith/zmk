#include <dt-bindings/zmk/matrix_transform.h>

#define L_DEF      0 // default layer
#define L_NAV      1 // navigation layer
#define L_NAVP     2 // navigation layer (identical but a duplicate with its own number)
#define L_NUM      3 // number and symbols layer
#define L_NUMP     4 // number and symbols layer (identical but a duplicate with its own number)
#define L_FUN      5 // function key layer
#define L_FUNP     6 // function key layer (identical but a duplicate with its own number)
#define L_BLE      7 // secret layer for bluetooth configuration
#define L_ONE_SHF  8 // special layer that modifies only the shift key
#define L_ONE_NAV  9 // special layer that modifies only the navigation layer key
#define L_ONE_NUM 10 // special layer that modifies only the number layer key
#define L_ONE_FUN 11 // special layer that modifies only the function layer key

/ {
  chosen {
    zmk,kscan = &kscan0;
    zmk,matrix_transform = &default_transform;
  };

  default_transform: keymap_transform_0 {
    compatible = "zmk,matrix-transform";
    columns = <10>;
    rows = <5>;

// +-------+-------+-------+-------+-------+-------+                       +-------+-------+-------+-------+-------+-------+
// |       |       |       |       |       |       |                       |       |       |       |       |       |       |
// +-------+-------+-------+-------+-------+-------+                       +-------+-------+-------+-------+-------+-------+
// |       |       |       |       |       |       |                       |       |       |       |       |       |       |
// +-------+-------+-------+-------+-------+-------+                       +-------+-------+-------+-------+-------+-------+
// |       |       |       |       |       |       |                       |       |       |       |       |       |       |
// +-------+-------+-------+-------+-------+-------+-------+       +-------+-------+-------+-------+-------+-------+-------+
//                 |       |       |       |       |       |       |       |       |       |       |       |
//                 +-------+-------+-------+-------+-------+       +-------+-------+-------+-------+-------+

  // The following matrix transform describes the wiring of the Yackboard
  map = <
    RC(0,0) RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)                         RC(1,9) RC(1,8) RC(1,7) RC(1,6) RC(1,5) RC(0,5)
    RC(0,1) RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)                         RC(2,9) RC(2,8) RC(2,7) RC(2,6) RC(2,5) RC(0,6)
    RC(0,2) RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4)                         RC(3,9) RC(3,8) RC(3,7) RC(3,6) RC(3,5) RC(0,7)
                    RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4)         RC(4,9) RC(4,8) RC(4,7) RC(4,6) RC(4,5)
    >;
  };

  kscan0: kscan_0 {
    compatible = "zmk,kscan-gpio-matrix";
    label = "KSCAN";
    diode-direction = "row2col";

    row-gpios // The following are the rows of the matrix of the Yackboard (with diodes pointing from rows to columns)
      = <&pro_micro 16 GPIO_ACTIVE_HIGH>
      , <&pro_micro 14 GPIO_ACTIVE_HIGH>
      , <&pro_micro 15 GPIO_ACTIVE_HIGH>
      , <&pro_micro 18 GPIO_ACTIVE_HIGH>
      , <&pro_micro 19 GPIO_ACTIVE_HIGH>
      ;
  };
};
